<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/fragment_bar"/>

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="220dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_dashboard_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp">

            <org.hisp.dhis.android.dashboard.ui.views.FontEditText
                android:id="@+id/dashboard_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dashboard_name"
                android:lines="2"
                android:textSize="17sp"
                app:font="@string/regular_font_name"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="1">

            <org.hisp.dhis.android.dashboard.ui.views.FontButton
                android:id="@+id/cancel_dashboard_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/transparent_selector"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/navy_blue"
                android:textSize="12sp"
                app:font="@string/medium_font_name"/>

            <org.hisp.dhis.android.dashboard.ui.views.FontButton
                android:id="@+id/save_dashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/transparent_selector"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/navy_blue"
                android:textSize="12sp"
                app:font="@string/medium_font_name"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>